<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a7eaa"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".77"
            android:layout_marginTop="10dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="15dp"
                android:src="@drawable/plc_holder"
                app:civ_border_color="#f4f4f4"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="SARANRAJ DEVARAJAN"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/id_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Android Developer"

                android:textColor="#c3ffffff" />

            <TextView
                android:id="@+id/id_exp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_qualification"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="2+ Experiences"
                android:textColor="#c3ffffff" />
            <TextView
                android:id="@+id/id_tot_proj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_exp_tv"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="5+ Projects"
                android:textColor="#c3ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_projt_btn"
                    android:layout_weight="1"
                    android:background="#4d000000"
                    android:elevation="5dp"
                    android:text="My Projects"
                    android:textColor="#f1f1f1" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_skills_btn"
                    android:layout_weight="1"
                    android:background="#4d000000"
                    android:elevation="5dp"
                    android:text="My Skills"
                    android:textColor="#f1f1f1" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_contact_btn"
                    android:layout_weight="1"
                    android:background="#4d000000"
                    android:elevation="5dp"
                    android:text="Get Touch!"
                    android:textColor="#f1f1f1" />
            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/id_fragment_container"
            android:layout_weight="1.25"/>

    </LinearLayout>


</RelativeLayout>